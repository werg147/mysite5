<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	
	<!-- 회원가입(회원정보 등록) -->
	<insert id="insert" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			insert into users
            values(
                   seq_users_no.nextval,
                   #{id},
                   #{password},
                   #{name},
                   #{gender}
            )
		]]>
	</insert>
	
	<!-- 로그인: 회원정보 가져오기(id, password) -->
	<select id="selectUser" parameterType="com.javaex.vo.UserVo" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no,
                   name
            from users
            where id = #{id}
            and password = #{password}
		]]>
	</select>
	
	<!-- 수정폼 : 로그인한 유저 1명 정보 가져오기 -->
	<select id="selectOne" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select no, 
                   id,
                   password,
                   name,
                   gender
            from users
            where no = #{no}
		]]>
	</select>
	
	<!-- 회원정보 수정하기 -->
	<update id="update" parameterType="com.javaex.vo.UserVo">
		<![CDATA[
			update users
            set password = #{password},
                name = #{name},
                gender = #{gender}
            where no = #{no}
		]]>
	</update>
	

</mapper>
